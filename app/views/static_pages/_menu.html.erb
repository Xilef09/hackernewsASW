
    <div class="header-top">
        <h1>Hacker News</h1>
        <div class="links">
            <a href="/contributions/new">Submit</a>
            <a href="/asks">Asks</a>
            <% if current_user %>
                <a href="/threads">Threads</a>
            <% end %>
        </div>
        <div class="user">
            <% if current_user %>
                <a href="/users/<%= current_user.id %>"> 
                <%= current_user.name %>
                </a>
                <%= link_to 'Sign out', '/sign_out', method: :delete %>
            <% else %>
            
                <%= link_to 'Sign in with Twitter', '/auth/twitter' %>
            
            <% end %>
        </div>
    </div>