<%= render 'static_pages/header' %>
<%= render 'static_pages/menu' %>
<table>
    <span><%=current_user.name %>'s Comments</span>
  <tbody>
    <% @comments.each.with_index(1) do |comment, index| %>
      <tr>
        <td>
          <span class="rank"><%= index%>.</span>
          <span class="reply_link">
          <% if current_user %>
            <%= link_to image_tag("grayarrow.gif"), like_comment_path(comment), method: :put %>
          <% else %>
            <%= link_to image_tag("grayarrow.gif"), "https://my-hacker-news-project.herokuapp.com//auth/twitter" %>
          <% end %>
          </span>
          <span style="color:grey">
            <%= link_to "#{getAuthor(comment.user_id)}", "/users/#{comment.user_id}", {style: "color: grey"}%>
            <%= time_ago_in_words(comment.created_at) %> ago | on: 
            
            <%= link_to "#{comment.contribution.titulo}", "/contributions/#{comment.contribution.id}", {style: "color: grey"}%>
          </span>
            
        </td>
      </tr>
      <tr>
        <td class="c00">
          <%= comment.content %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
    <span><%= current_user.name %>'s Replies</span>
  <tbody>
    <% @replies.each.with_index(1) do |reply, index| %>
      <tr>
        <td>
          <span class="rank"><%= index%>.</span>
          <span class="reply_link">
          <% if current_user %>
            <%= link_to image_tag("grayarrow.gif"), like_reply_path(reply), method: :put %>
          <% else %>
            <%= link_to image_tag("grayarrow.gif"), "https://my-hacker-news-project.herokuapp.com/auth/twitter" %>
          <% end %>
          </span>
          <span style="color:grey">
            <%= link_to "#{getAuthor(reply.user_id)}", "/users/#{reply.user_id}", {style: "color: grey"}%>
            <%= time_ago_in_words(reply.created_at) %> ago | 
            <%= link_to "parent", "/comments/#{reply.comment.id}", {style: "color: grey"}%>
            | on: 
            <%= link_to "#{reply.contribution.titulo}", "/contributions/#{reply.comment.contribution.id}", {style: "color: grey"}%>
          </span>
            
        </td>
      </tr>
      <tr>
        <td class="c00">
          <%= reply.content %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>